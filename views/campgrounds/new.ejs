<% include ../partial/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create A New View Spot</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="campName">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="score" name="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="campImage">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>    
            
    </div>

</div>

<% include ../partial/footer %>